{% block body %}
    {{ parent() }}

    {% block content %}
        <section class="content margin-top-30">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-center" id="section-title">
                        <h3>
                            Editar Persona
                        </h3>
                    </div>
                </div>
            </div>
            <div class="container">
                <form action="{{ path('persona_edit',{'id': persona.idpersona}) }}" method="post" id="frm-persona">
