{% extends 'frontend.html.twig' %}
{% import 'javascripts.html.twig' as js %}

{% block body %}
    {{ parent() }}

    <h1 class="text-center">Listado de Club</h1>

    <div class="container">
        <div class="row">
            <div class="col-xl-12 text-right">
                <div class="btn-group" role="group" aria-label="Acciones">
                    <a href="{{ path('club_new') }}" id="link-add-customer" class="btn btn-primary">
                        <i class="glyphicon glyphicon-plus-sign"></i>
                        <span class="hidden-xs">Adicionar</span>
                    </a>

                    <a href="{{ path('club_delete') }}" id="link-delete-customer" class="btn btn-default link-delete">
                        <i class="glyphicon glyphicon-minus-sign"></i>
                        <span class="hidden-xs">Borrar</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="datatable row">
        <div class="container margin-top-30">
            {#<div class="row">#}
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped table-bordered data-table table-responsive" style="width: 100%;" id="grid">
                    <thead>
                    <tr>
                        <th style="width: 10px;">&nbsp;</th>
                        <th>Nombre</th>
                        <th>Escudo</th>
                        <th>Presupuesto</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                    <tr>
                        <th style="visibility: hidden">&nbsp;</th>
                        <th></th>
                        <th></th>
                        <th></th>

                    </tr>
                    </tfoot>
                </table>
            </div>
            {#</div>#}
        </div>
    </div>


    {% block javascripts %}
        {{ js.datatables }}
        <script type="text/javascript">
            var dataTable;
            $(document).ready(function() {
                dataTable = initializeDatatable($('table.data-table'), {
                    aaSorting: [[1, 'asc']],
                    ajax: {
                        url:'{{ path('club.json') }}',
                        dataSrc: 'data'
                    },
                    aoColumns: [{
                        bSortable: false,
                        bSearchable: false
                    }, null, null, null]
                });

                // Setup - add a text input to each footer cell
                $('#grid tfoot th').each( function () {
                    var title = $(this).text();
                    $(this).html( '<input type="text" placeholder="buscar" />' );
                } );

                // DataTable
                var table = $('#grid').DataTable();

                // Apply the search
                table.columns().every( function () {
                    var that = this;

                    $( 'input', this.footer() ).on( 'keyup change', function () {
                        if ( that.search() !== this.value ) {
                            that.search( this.value ).draw();
                        }
                    } );
                } );

            });
        </script>

    {% endblock %}

{% endblock %}